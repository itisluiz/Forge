{
	"name": "forge-backend",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"start:prod": "node --env-file=.env --env-file=.secrets.env dist/index.js",
		"start:dev": "node --env-file=.development.env --env-file=.secrets.development.env dist/index.js",
		"development": "tsc-watch --onSuccess \"node --env-file=.development.env --env-file=.secrets.development.env dist/index.js\"",
		"build": "tsc",
		"reseed:dev": "sequelize db:seed:undo:all --env development && sequelize db:seed:all --env development",
		"reseed:prod": "sequelize db:seed:undo:all --env production && sequelize db:seed:all --env production",
		"reseed": "npm run reseed:dev || npm run reseed:prod",
		"preinstall": "npm link ../shared && cd .. && npm install"
	},
	"dependencies": {
		"body-parser": "^1.20.2",
		"chalk": "^5.3.0",
		"dotenv": "^16.4.5",
		"express": "^4.19.1",
		"express-async-errors": "^3.1.1",
		"jsonschema": "^1.4.1",
		"jsonwebtoken": "^9.0.2",
		"mariadb": "^3.3.0",
		"openai": "^4.47.1",
		"sequelize": "^6.37.3",
		"validator": "^13.12.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^20.11.30",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"sequelize-cli": "^6.6.2",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.0",
		"tsc-watch": "^6.2.0",
		"typescript": "^5.4.3"
	}
}

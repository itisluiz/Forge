{
	"name": "forge-backend",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"start": "npm run clean && tsc && node --env-file=.env --env-file=.secrets.env dist/index.js",
		"development": "npm run clean && tsc && concurrently \"tsc --watch\" \"node --watch --env-file=.development.env --env-file=.secrets.development.env dist/index.js\"",
		"normalize": "prettier . --write",
		"setup": "npm install && npm link ../shared",
		"clean": "rimraf dist"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"express": "^4.19.1",
		"mariadb": "^3.3.0",
		"sequelize": "^6.37.3"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.30",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"concurrently": "^8.2.2",
		"prettier": "3.2.5",
		"rimraf": "^5.0.5",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.0",
		"typescript": "^5.4.3"
	}
}
